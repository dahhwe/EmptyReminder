<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reminder_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintEnd_toStartOf="@+id/reminder_complete_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reminder_complete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="complete"
        app:layout_constraintEnd_toStartOf="@+id/reminder_delete_button" />

    <Button
        android:id="@+id/reminder_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/completed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reminder_name_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
